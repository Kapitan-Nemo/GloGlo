{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0" // workaround: https://github.com/vuejs/tsconfig/issues/6
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
